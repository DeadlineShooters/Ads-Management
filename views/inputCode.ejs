	<title>Log in | Ads Management</title>
</head>
<body class="container vh-100 vw-100 d-flex flex-column justify-content-center">
	<%- include('./partials/flash') %>
	<div class="container d-flex">
	<div class="row w-100 d-flex justify-content-center align-self-center">
		<!-- <div
		class="col-md-5 d-flex flex-column align-items-center p-4"
		id="mainContainer"
		> -->
		<form class="col-md-5 p-4 px-5" action="" method="post" enctype="application/x-www-form-urlencoded"
			style="
				border-radius: 20px;
				background: #f8f8fd;
			  
				box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);"
		>
			<div class="mb-3">
				<label for="password" class="form-label">Mã PIN</label>
				<input type="password" class="form-control" name="password" id="password" placeholder="" required onkeyup="validatePassword(this.value)">
                <p>(Mã sẽ hết hạn trong ... phút)</p>
            </div>
			<div class=" text-center">
				<button class="btn btn-primary">Xác nhận</button>
			</div>
		</form>
		<!-- </div> -->
	</div>


	<script>
	function show(checked) {
		if (checked) {
			document.querySelector('#inputPassword').type = 'text';
		} else {
			document.querySelector('#inputPassword').type = 'password';
		}
	}
	</script>
	<!-- Bootstrap JavaScript Libraries -->
	<script
	src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
