<% layout('layouts/canbo') %>
<%#- include('../../../partials/modal.ejs') %>
<section class="d-flex <%= props.type==='Quận'? 'justify-content-between' : 'justify-content-end' %> ">
    <% if (props.type === "Quận") {%>
    <%- include('../../../partials/so/quanLyDropdown') %>
    <% } %>
    <div>
        <% if (props.type === 'Quận') { %>
        <a class="btn btn-primary rounded-pill" href="/so/quanly/quan/add" role="button">Thêm <i class="bi bi-plus"></i></a>
        <% } else { %>
        <a class="btn btn-primary rounded-pill" href="/so/quanly/quan/<%= props.quanId %>/phuong/add" role="button">Thêm <i class="bi bi-plus"></i></a>
        <% } %>
    </div>
</section>
<section class="overflow-auto my-3 border rounded">
    <div>
        <table class="table table-light table-striped">
            <thead>
                <tr>
                    <th scope="col">No.</th>
                    <th scope="col">Tên <%= props.type %></th>
                    <th scope="col">Mô tả</th>
                    <th scope="col">Chú thích</th>
                    <th scope="col">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                <% let i = 1; %>
                <% for (let item of items) { %>
                <tr class="myElement">
                    <th scope="row"><%= i++ %></th>
                    <td class="text-break"><%= item.name %></td>
                    <td class="text-break"><%= item.description %></td>
                    <td class="text-break"><%= item.note %></td>
                    <td class="text-break">
                        <div class="d-flex">
                            <% if (props.type === 'Quận') { %>
                            <a href="/so/quanly/quan/<%= item.id %>/phuong"><i class="bi bi-info-circle btn p-0 btn-link"></i></a>
                            <a href="/so/quanly/quan/<%= item.id %>/edit"><i class="bi bi-pencil-fill ms-2 btn p-0 btn-link"></i></a>
                            <form action="/so/quanly/quan/<%= item.id %>?_method=DELETE"method="post">
                                <button class="btn btn-link p-0 ms-2 showModal"><i class="bi bi-trash3-fill"></i></button>
                            </form>
                            <% } else { %>
                            <a class="btn btn-link p-0" href="/so/quanly/quan/<%= props.quanId %>/phuong/<%= item.id %>/edit"><i class="bi bi-pencil-fill"></i></a>
                            <form action="/so/quanly/quan/<%= props.quanId %>/phuong/<%= item.id %>?_method=DELETE"method="post">
                                <button class="btn btn-link p-0 ms-2"><i class="bi bi-trash3-fill"></i></button>
                            </form>
                            <% } %>
                        </div>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</section>
<section class="d-flex justify-content-center mt-auto">
    <nav aria-label="...">
        <ul class="pagination m-0 justify-content-end">
            <li class="page-item disabled">
                <a class="page-link">Previous</a>
            </li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item active" aria-current="page">
                <a class="page-link" href="#">2</a>
            </li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#">Next</a>
            </li>
        </ul>
    </nav>
</section>
