<% layout('layouts/canbo') %>

  <style>
    .status {
      border-radius: 1rem;
    }

    .status.notAccept {
      background-color: #F6808e;
    }

    .status.Accept {
      background-color: #80f6b0;
    }

    .status.notHandle {
      background-color: #9780f6;
    }

    p {
      margin: 0;
      padding: 0;
      text-align: center;
    }

    .nopadding {
      padding: 0 !important;
    }

    #edit:hover {
      color: #f6db80;
    }

    .del:hover {
      color: #F6808e;
    }
  </style>

  <script>
    function showMessage() {
      alert('Đang xử lý');
    }
  </script>

  <div class="container p-3 bg-light rounded overflow-auto">
    <section class="d-flex justify-content-between">
      <div class="fs-6 nopadding">
        <input type="text" readonly class="form-control-plaintext fw-bold" id="" value="Tìm kiếm tài khoản cán bộ">
      </div>
      <div class="d-flex flex-row align-items-center">
        <div class="md-col-2 me-2">
          <a class="btn btn-warning btn-sm btn-responsive" href="dang-ky-tai-khoan-cb" role="button"><span>
              class="bi bi-person-plus-fill" </span>Thêm cán bộ</a>
        </div>
        <div class="md-col-2 me-2">
          <button type="button" class="btn btn-primary btn-sm btn-responsive"><span
              class="bi bi-filter"></span>Lọc</button>
        </div>
        <div class="md-col-3">
          <div class="input-group">
            <input class="form-control border-right-0" placeholder="Tìm cán bộ">
            <span class="input-group-append bg-white border-left-0">
              <button class="input-group-text bg-transparent">
                <i class="bi bi-search"></i>
              </button>
            </span>
          </div>
        </div>
      </div>
    </section>
    <section class="border rounded mt-2">
      <table class="table table-light table-striped">
        <thead>
          <tr>
            <th scope="col">STT</th>
            <th scope="col">Họ tên</th>
            <th scope="col">Ngày sinh</th>
            <th scope="col">Email</th>
            <th scope="col">Điện thoại</th>
            <th scope="col">Quận quản lý</th>
            <th scope="col">Phường quản lý</th>
            <th scope="col">Quản lý</th>
          </tr>
        </thead>
        <tbody>
          <% if (canBo !="" ) { %>
            <% for (let i=0; i<canBo.length; i++) { %>
              <tr class="align-items-center">
                <th scope="row">
                  <%= i + 1 %>
                </th>
                <td>
                  <%= canBo[i].username %>
                </td>
                <td>
                  <%= new Date(canBo[i].birthday).toLocaleDateString() %>
                </td>
                <td>
                  <%= canBo[i].email %>
                </td>
                <td>
                  <%= canBo[i].phone %>
                </td>
                <td>
                  <%= canBo[i].ward %>
                </td>
                <td>
                  <%= canBo[i].district %>
                </td>
                <td class="text-center">
                  <div class="d-flex flex-row align-items-center">
                    <a name="edituser" id="edit" class="btn nopadding mx-1"
                      href="chinh-sua-tai-khoan-cb/<%=canBo[i]._id%>" role="button"><i
                        class="bi bi-pencil-fill"></i></a>
                    <form action="chinh-sua-tai-khoan-cb/<%=canBo[i]._id%>?_method=DELETE" method="POST">
                      <button class="btn nopadding mx-1 del" id="deleteButton" type="button" data-bs-toggle="modal"
                        data-bs-target="#deleteModal"><i class="bi bi-trash-fill"></i></button>
                    </form>
                  </div>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </section>
    <% if (canBo.length=="" ) { %>
      <section class="d-flex justify-content-center mt-auto">
        <div class="alert alert-danger alert-dismissible fade show">
          <strong>Thông báo:</strong> Không có tài khoản cán bộ nào thỏa yêu cầu!
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      </section>
      <% } %>
  </div>

  <div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <div class="modal-title">Thông báo xác nhận xóa tài khoản cán bộ</div>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Không"></button>
        </div>
        <div class="modal-body">
          <p>
            Hành động này sẽ xóa <strong>vĩnh viễn</strong> tài khoản cán bộ.
            <br> Bạn có chắc không?
          </p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
          <form action="chinh-sua-tai-khoan-cb/$(this).attr('data-id')?_method=DELETE" method="POST"
            class="position-relative">
            <button type="submit" class="btn btn-primary">
              Đồng ý
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>