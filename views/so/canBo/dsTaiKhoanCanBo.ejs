<% layout('layouts/canbo') %>

  <style>
    .status {
      border-radius: 1rem;
    }

    .status.notAccept {
      background-color: #F6808e;
    }

    .status.Accept {
      background-color: #80f6b0;
    }

    .status.notHandle {
      background-color: #9780f6;
    }

    p {
      margin: 0;
      padding: 0;
      text-align: center;
    }

    .nopadding {
      padding: 0 !important;
    }

    #edit:hover {
      color: #f6db80;
    }

    .del:hover {
      color: #F6808e;
    }
  </style>

  <script>
    function showMessage() {
      alert('Đang xử lý');
    }
  </script>

  <section class="d-flex justify-content-between">
    <div class="fs-6 nopadding">
      <input type="text" readonly class="form-control-plaintext fw-bold" id="" value="Danh sách tài khoản cán bộ">
    </div>
    <div class="d-flex flex-row align-items-center">
      <div class="md-col-2 me-2">
        <a class="btn btn-warning btn-sm btn-responsive" href="dang-ky-tai-khoan-cb" role="button"><span
            class="bi bi-person-plus-fill" </span>Thêm cán bộ</a>
      </div>
      <div class="md-col-2 me-2">
        <button type="button" class="btn btn-primary btn-sm btn-responsive"><span
            class="bi bi-filter"></span>Lọc</button>
      </div>
      <div class="md-col-3">
        <form action="tim-kiem-can-bo" role="search" method="POST">
          <div class="input-group">
            <input type="search" name="searchItem" class="form-control border-right-0" placeholder="Tìm cán bộ">
            <span class="input-group-append bg-white border-left-0">
              <button class="input-group-text bg-transparent">
                <i class="bi bi-search"></i>
              </button>
            </span>
          </div>
        </form>
      </div>
    </div>
  </section>
  <section class="border rounded mt-2">
    <table class="table table-light table-striped">
      <thead>
        <tr>
          <th scope="col">STT</th>
          <th scope="col">Họ tên</th>
          <th scope="col">Ngày sinh</th>
          <th scope="col">Email</th>
          <th scope="col">Điện thoại</th>
          <th scope="col">Quận quản lý</th>
          <th scope="col">Phường quản lý</th>
          <th scope="col">Quản lý</th>
        </tr>
      </thead>
      <tbody>
        <% for (let i=0; i<canBo.length; i++) { %>
          <% if (canBo[i].role == "quan" ) { %>
            <tr class="align-items-center">
              <th scope="row">
                <%= i + 1 %>
              </th>
              <td>
                <%= canBo[i].username %>
              </td>
              <td>
                <%= new Date(canBo[i].birthday).toLocaleDateString() %>
              </td>
              <td>
                <%= canBo[i].email %>
              </td>
              <td>
                <%= canBo[i].phone %>
              </td>
              <td>
                <%= canBo[i].ward %>
              </td>
              <td>
                <%= canBo[i].district %>
              </td>
              <td class="text-center">
                <div class="d-flex flex-row align-items-center">
                  <a name="edituser" id="edit" class="btn nopadding mx-1"
                    href="chinh-sua-tai-khoan-cb/<%=canBo[i]._id%>" role="button"><i
                      class="bi bi-pencil-fill"></i></a>
                  <form action="chinh-sua-tai-khoan-cb/<%=canBo[i]._id%>?_method=DELETE" method="POST">
                    <button class="btn nopadding mx-1 del" id="deleteButton" type="button" data-bs-toggle="modal" 
                    data-bs-target="#deleteModal"><i class="bi bi-trash-fill"></i></button>
                  </form>
                </div>
              </td>
            </tr>
            <% } %>
          <% } %>
      </tbody>
    </table>
  </section>

  <% messageAdd.forEach(element=> { %>
    <section class="d-flex justify-content-center mt-auto">
      <div class="alert alert-success alert-dismissible fade show">
        <strong>Thông báo:</strong>
        <%= messageAdd %>.
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    </section>
  <% }) %>
  <% messageEdit.forEach(element=> { %>
    <section class="d-flex justify-content-center mt-auto">
      <div class="alert alert-warning alert-dismissible fade show">
        <strong>Thông báo:</strong>
        <%= messageEdit %>.
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    </section>
  <% }) %>
  <% messageDel.forEach(element=> { %>
    <section class="d-flex justify-content-center mt-auto">
      <div class="alert alert-danger alert-dismissible fade show">
        <strong>Thông báo:</strong>
        <%= messageDel %>.
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    </section>
  <% }) %>
  <% if (canBo.length> 0) { %>
    <section class="d-flex justify-content-center mt-auto">
      <nav aria-label="Dashboard Pagination">
        <ul class="pagination m-0 justify-content-end">
          <% if (current == 1) { %>
            <li class="page-item disabled "><a class="page-link" href="#">Trang trước</a></li>
          <% } else { %>
            <li class="page-item "><a class="page-link" href="/?page=1">Trang trước</a></li>
          <% } %>

          <% var i = (Number(current)> 5 ? Number(current) - 4 : 1) %>
          <% if (i!==1) { %>
            <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
          <% } %>
          <% for(; i <=(Number(current) + 4) && i <=pages; i++) { %>
            <% if (i==current) { %>
              <li class="page-item disabled"><a class="page-link" href="#"><%= i %></a></li>
            <% } else { %>
              <li class="page-item"><a class="page-link" href="?page=<%= i %>"><%= i %></a></li>
            <% } %>
            <% if (i==Number(current) + 4 && i < pages) { %>
              <li class="page-item"><a class="page-link" href="?page=<%= i %>">...</a></li>
            <% } %>
          <% } %>
          <% if (current==pages) { %>
            <li class="page-item disabled"><a class="page-link" href="#">Trang sau</a></li>
          <% } else { %>
            <li class="page-item"><a class="page-link" href="?page=<%= pages %>">Trang sau</a></li>
          <% } %>
        </ul>
      </nav>
    </section>
  <% } %>
  <div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <div class="modal-title fw-bold">Thông báo xác nhận xóa tài khoản cán bộ</div>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Không"></button>
        </div>
        <div class="modal-body">
          <p>
            Hiện tại chưa thể xóa tài khoản cán bộ ngay tại danh sách. 
            <br> Hãy thử nó trong chế độ chỉnh sửa tài khoản!
          </p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
          <!-- <form action="chinh-sua-tai-khoan-cb/$(this).attr('data-id')?_method=DELETE" method="POST" class="position-relative">
            <button type="submit" class="btn btn-primary">
                Đồng ý
            </button>
          </form> -->
        </div>
      </div>
    </div>
  </div>