<% layout('layouts/canbo') %>

<div class="card m-auto" style="width: 30rem">
  <!-- refer to routes/phuong.js to see data example -->
<img src=<%=details.image.url%> class="card-img-top" alt="" />

<div class="card-body py-1">
  <h5 class="card-title">Chi tiết <%=props.title%> quảng cáo</h5>
  <%if (details.adLocation) {%>
  <p class="card-text"><%=details.adLocation.address%>, Quận <%= details.adLocation.district.name %>, Phường <%= details.adLocation.ward.name %></p>
  <%} else { %>
    <p class="card-text"><%=details.address%>, Quận <%= details.district.name %>, Phường <%= details.ward.name %></p>
  <% } %>
</div>
<ul class="list-group list-group-flush">
  <%if (details.boardType) {%>
  <li class="list-group-item">Loại bảng: <b><%=details.boardType.name%></b></li>
  <%}%>

  <li class="list-group-item">Hình thức: <b><%=details.adLocation? details.adLocation.adType.name : details.adType.name %></b></li>
  <li class="list-group-item">Phân loại: <b><%=details.adLocation? details.adLocation.type.name : details.type.name %></b></li>
  <%if (details.status && !details.adLocation) {%>
  <li class="list-group-item"><b><%=details.status%></b></li>
  <%}%> <%if (details.size) {%>
  <li class="list-group-item">
    Kích thước: <%=details.size.w%>m x <%=details.size.h%>m
  </li>
  <%}%> <%if (details.quantity){%>
  <li class="list-group-item">
    Số lượng: <b><%=details.quantity%> trụ/bảng</b>
  </li>
  <%}%> <%if (details.startDate) {%>
  <li class="list-group-item">
    Ngày bắt đầu hợp đồng:
    <b><%=details.startDate.d%>/<%=details.startDate.m%>/<%=details.startDate.y%></b>
  </li>
  <%}%> <%if (details.expireDate) {%>
  <li class="list-group-item">
    Ngày kết thúc hợp đồng:
    <b><%=details.expireDate.d%>/<%=details.expireDate.m%>/<%=details.expireDate.y%></b>
  </li>
  <%}%>
</ul>
<div class="card-body d-flex flex-row" id="buttons">
  <a href="<%= props.b1url %>" class="btn btn-<%= props.b1color %> me-3"><%=props.b1text%></a></form>
  <form action="<%= props.b2url %>"><button type="submit" class="btn btn-<%= props.b2color %>"><%=props.b2text%></button></form>
</div>

</div>
