<% layout('layouts/canbo') %>

<div class="card" style="background: #f8f8fd">
  <h5 class="card-header bg-primary-subtle">Tạo yêu cầu cấp phép</h5>
  <div class="card-body container">
    <form action="" class="row g-3 mb-3 p-3">
      <div class="col-md-5">
        <label for="address" class="form-label fw-semibold">Địa chỉ</label>
        <input
          id="address"
          class="form-control w-auto"
          type="text"
          value="<%=addr%>"
          aria-label="Disabled input example"
          disabled
          readonly
        />
      </div>
      <div class="col-sm-3">
        <label for="ward" class="form-label fw-semibold">Phường</label>
        <input
          id="ward"
          class="form-control w-auto"
          type="text"
          value="<%=ward%>"
          aria-label="Disabled input example"
          disabled
          readonly
        />
      </div>
      <div class="col-sm-4">
        <label for="district" class="form-label fw-semibold">Quận</label>
        <input
          id="district"
          class="form-control w-auto"
          type="text"
          value="<%=district%>"
          aria-label="Disabled input example"
          disabled
          readonly
        />
      </div>
      <div class="col-md-3">
        <label for="amount" class="form-label fw-semibold">Số lượng</label>
        <div class="input-group">
          <input
            type="number"
            class="form-control"
            id="amount"
            style="max-width: 20%"
            required
          />
          <span class="input-group-text">trụ/bảng</span>
        </div>
      </div>
      <div class="col-md-4">
        <label for="size" class="form-label fw-semibold">Kích thước</label>
        <div class="input-group">
          <input
            type="number"
            class="form-control"
            id="size"
            style="max-width: 20%"
            required
          />
          <span class="input-group-text">m x</span>
          <input
            type="number"
            class="form-control"
            id="size"
            style="max-width: 20%"
            required
          />
          <span class="input-group-text">m</span>
        </div>
      </div>
      <div class="col-md-5">
        <label for="adType" class="form-label fw-semibold"
          >Loại bảng quảng cáo</label
        >
        <%-include("../partials/phuong/selectLocationType")%>
      </div>
      <div class="col-md-10">
        <label for="exampleFormControlTextarea1" class="form-label"
          >Nội dung quảng cáo</label
        >
        <textarea
          class="form-control"
          id="exampleFormControlTextarea1"
          rows="3"
        ></textarea>
      </div>

      <div class="col-md-5">
        <label for="formFile" class="form-label">Hình ảnh minh họa</label>
        <input class="form-control" type="file" id="formFile" required />
      </div>
      <div class="col-md-5">
        <label for="companyName" class="form-label">Tên công ty</label>
        <input type="text" class="form-control" id="companyName" required />
      </div>
      <div class="col-md-5">
        <label for="contactInfo" class="form-label">Thông tin liên lạc</label>
        <input type="text" class="form-control" id="companyName" required />
      </div>
      <div class="col-md-12">
        <label for="contactInfo" class="form-label">Hợp đồng</label>
        <div class="input-group d-flex align-items-center">
          <label for="start" class="input-group-text">Ngày bắt đầu</label>
          <input
            type="date"
            id="start"
            aria-label="Start date"
            class="form-control"
            required
          />
          <span class="validity"></span>
          <label for="end" class="input-group-text">Ngày kết thúc</label>
          <input
            type="date"
            id="end"
            aria-label="End date"
            class="form-control"
            required
          />
          <span class="validity"></span>
        </div>
      </div>
    </form>

    <div class="row">
      <button
        type="button"
        class="btn btn-secondary w-auto m-auto"
        data-bs-toggle="modal"
        data-bs-target="#exampleModal"
      >
        Cập nhật tình trạng và cách thức xử lý
      </button>
    </div>
  </div>
</div>
